<Window x:Class="StudentManagementSystem.Views.AdminDashboard"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Admin Dashboard" Height="600" Width="800" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <StackPanel Background="#F0F0F0">
            <Button Content="Manage Students" Margin="10" Click="ManageStudents_Click"/>
            <Button Content="Manage Users" Margin="10" Click="ManageUsers_Click"/>
            <Button Content="Manage Roles" Margin="10" Click="ManageRoles_Click"/>
            <Button Content="Manage User Roles" Margin="10" Click="ManageUserRoles_Click"/>
            <Button Content="Manage Subjects" Margin="10" Click="ManageSubjects_Click"/>
            <Button Content="Manage Provinces" Margin="10" Click="ManageProvinces_Click"/>
            <Button Content="View Enrollments" Margin="10" Click="ViewEnrollments_Click"/>
            <Button Content="Search Student Grades" Margin="10" Click="SearchGrades_Click"/>
            <Button Content="Logout" Margin="10" Click="Logout_Click"/>
        </StackPanel>
        <ContentControl x:Name="MainContent" Grid.Column="1" Margin="10"/>
    </Grid>
</Window>