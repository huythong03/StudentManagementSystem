<Window x:Class="StudentManagementSystem.Views.AdminDashboard"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="Admin Dashboard - Student Management System"
        Height="600"
        Width="800"
        WindowStyle="None"
        WindowState="Maximized"
        WindowStartupLocation="CenterScreen"
        Background="#F5F7FA">
    <Window.Resources>
        <!-- Font Family -->
        <FontFamily x:Key="PrimaryFont">Segoe UI, Roboto, sans-serif</FontFamily>

        <!-- Sidebar Button Style -->
        <Style x:Key="SidebarButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontFamily" Value="{StaticResource PrimaryFont}"/>
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="Margin" Value="10,5"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="6"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Left"
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#334155"/>
                                <Setter Property="Cursor" Value="Hand"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#475569"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Logout Button Style -->
        <Style x:Key="LogoutButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#4F46E5"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontFamily" Value="{StaticResource PrimaryFont}"/>
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="Margin" Value="0,0,5,0"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="6"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center"
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#4338CA"/>
                                <Setter Property="Cursor" Value="Hand"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#3730A3"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Exit Button Style -->
        <Style x:Key="ExitButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#EF4444"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontFamily" Value="{StaticResource PrimaryFont}"/>
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="Margin" Value="5,0,0,0"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="6"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center"
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#DC2626"/>
                                <Setter Property="Cursor" Value="Hand"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#B91C1C"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Home Button Style -->
        <Style x:Key="HomeButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#64748B"/>
            <Setter Property="Padding" Value="8"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="6"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center"
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#E2E8F0"/>
                                <Setter Property="Cursor" Value="Hand"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#D1D5DB"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Card Style for Dashboard -->
        <Style x:Key="DashboardCardStyle" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="15"/>
            <Setter Property="Margin" Value="10"/>
            <Setter Property="BorderBrush" Value="#E2E8F0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#D1D5DB" ShadowDepth="0" BlurRadius="10" Opacity="0.2"/>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="240"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Sidebar -->
        <Border Background="#1E293B"
                Margin="0,0,5,0">
            <StackPanel>
                <!-- Sidebar Header -->
                <Border Padding="15"
                        Background="#0F172A">
                    <StackPanel>
                        <TextBlock Text="Welcome Back"
                                   Foreground="#94A3B8"
                                   FontSize="12"
                                   FontWeight="Medium"
                                   FontFamily="{StaticResource PrimaryFont}"
                                   HorizontalAlignment="Center"/>
                        <TextBlock Text="ADMINISTRATOR"
                                   Foreground="White"
                                   FontSize="16"
                                   FontWeight="Bold"
                                   FontFamily="{StaticResource PrimaryFont}"
                                   HorizontalAlignment="Center"
                                   Margin="0,5,0,0"/>
                    </StackPanel>
                </Border>

                <!-- Buttons with Icons -->
                <Button Style="{StaticResource SidebarButtonStyle}"
                        Click="ManageStudents_Click">
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="AccountMultiple"
                                                 Width="20"
                                                 Height="20"
                                                 Margin="0,0,12,0"
                                                 VerticalAlignment="Center"/>
                        <TextBlock Text="Manage Students"/>
                    </StackPanel>
                </Button>
                <Button Style="{StaticResource SidebarButtonStyle}"
                        Click="ManageUsers_Click">
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="Account"
                                                 Width="20"
                                                 Height="20"
                                                 Margin="0,0,12,0"
                                                 VerticalAlignment="Center"/>
                        <TextBlock Text="Manage Users"/>
                    </StackPanel>
                </Button>
                <Button Style="{StaticResource SidebarButtonStyle}"
                        Click="ManageRoles_Click">
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="ShieldAccount"
                                                 Width="20"
                                                 Height="20"
                                                 Margin="0,0,12,0"
                                                 VerticalAlignment="Center"/>
                        <TextBlock Text="Manage Roles"/>
                    </StackPanel>
                </Button>
                <Button Style="{StaticResource SidebarButtonStyle}"
                        Click="ManageUserRoles_Click">
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="AccountKey"
                                                 Width="20"
                                                 Height="20"
                                                 Margin="0,0,12,0"
                                                 VerticalAlignment="Center"/>
                        <TextBlock Text="Manage User Roles"/>
                    </StackPanel>
                </Button>
                <Button Style="{StaticResource SidebarButtonStyle}"
                        Click="ManageSubjects_Click">
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="BookOpen"
                                                 Width="20"
                                                 Height="20"
                                                 Margin="0,0,12,0"
                                                 VerticalAlignment="Center"/>
                        <TextBlock Text="Manage Subjects"/>
                    </StackPanel>
                </Button>
                <Button Style="{StaticResource SidebarButtonStyle}"
                        Click="ManageProvinces_Click">
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="Map"
                                                 Width="20"
                                                 Height="20"
                                                 Margin="0,0,12,0"
                                                 VerticalAlignment="Center"/>
                        <TextBlock Text="Manage Provinces"/>
                    </StackPanel>
                </Button>
                <Button Style="{StaticResource SidebarButtonStyle}"
                        Click="ViewEnrollments_Click">
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="ClipboardList"
                                                 Width="20"
                                                 Height="20"
                                                 Margin="0,0,12,0"
                                                 VerticalAlignment="Center"/>
                        <TextBlock Text="View Enrollments"/>
                    </StackPanel>
                </Button>
                <Button Style="{StaticResource SidebarButtonStyle}"
                        Click="SearchGrades_Click">
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="Magnify"
                                                 Width="20"
                                                 Height="20"
                                                 Margin="0,0,12,0"
                                                 VerticalAlignment="Center"/>
                        <TextBlock Text="Search Student Grades"/>
                    </StackPanel>
                </Button>
                <Button Style="{StaticResource SidebarButtonStyle}"
                        Click="ManageEnrollRequests_Click">
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="ClipboardCheck" 
                               Width="20"
                               Height="20"
                               Margin="0,0,12,0"
                               VerticalAlignment="Center"/>
                        <TextBlock Text="Manage Enroll Requests"/>
                    </StackPanel>
                </Button>

                <!-- Logout and Exit Buttons -->
                <StackPanel Orientation="Horizontal"
                            Margin="10,20,10,5"
                            HorizontalAlignment="Center">
                    <Button Width="90"
                            Style="{StaticResource LogoutButtonStyle}"
                            Click="Logout_Click">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="Logout"
                                                     Width="16"
                                                     Height="16"
                                                     Margin="0,0,6,0"
                                                     VerticalAlignment="Center"/>
                            <TextBlock Text="Logout"/>
                        </StackPanel>
                    </Button>
                    <Button Width="70"
                            Style="{StaticResource ExitButtonStyle}"
                            Click="Exit_Click">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="Power"
                                                     Width="16"
                                                     Height="16"
                                                     Margin="0,0,6,0"
                                                     VerticalAlignment="Center"/>
                            <TextBlock Text="Exit"/>
                        </StackPanel>
                    </Button>
                </StackPanel>
            </StackPanel>
        </Border>

        <!-- Main Content -->
        <Border Grid.Column="1"
                Background="White"
                Margin="5,10,10,10"
                BorderBrush="#E2E8F0"
                BorderThickness="1">
            <Border.Effect>
                <DropShadowEffect Color="#D1D5DB"
                                  ShadowDepth="0"
                                  BlurRadius="10"
                                  Opacity="0.2"/>
            </Border.Effect>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Header with Home Button, Date, and Time -->
                <Border Background="White"
                        BorderBrush="#E2E8F0"
                        BorderThickness="0,0,0,1">
                    <Grid>
                        <!-- Home Button -->
                        <Button Style="{StaticResource HomeButtonStyle}"
                                Click="Home_Click"
                                HorizontalAlignment="Left"
                                ToolTip="Return to Dashboard Overview">
                            <materialDesign:PackIcon Kind="Home"
                                                     Width="24"
                                                     Height="24"
                                                     VerticalAlignment="Center"/>
                        </Button>
                        <!-- Date and Time -->
                        <StackPanel Orientation="Horizontal"
                                    HorizontalAlignment="Right">
                            <materialDesign:PackIcon Kind="Calendar"
                                                     Foreground="#64748B"
                                                     Width="18"
                                                     Height="18"
                                                     VerticalAlignment="Center"
                                                     Margin="0,0,6,0"/>
                            <TextBlock x:Name="DateTextBlock"
                                       FontSize="14"
                                       FontFamily="{StaticResource PrimaryFont}"
                                       Foreground="#475569"
                                       VerticalAlignment="Center"
                                       Margin="0,0,15,0"/>
                            <materialDesign:PackIcon Kind="Clock"
                                                     Foreground="#64748B"
                                                     Width="18"
                                                     Height="18"
                                                     VerticalAlignment="Center"
                                                     Margin="0,0,6,0"/>
                            <TextBlock x:Name="TimeTextBlock"
                                       VerticalAlignment="Center"
                                       FontSize="14"
                                       FontFamily="{StaticResource PrimaryFont}"
                                       Foreground="#475569"
                                       Margin="0,0,15,0"/>
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- Content Area -->
                <ContentControl x:Name="MainContent"
                                Grid.Row="1"
                                Margin="15">
                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <TextBlock Text="Dashboard Overview"
                                       FontSize="24"
                                       FontWeight="Bold"
                                       FontFamily="{StaticResource PrimaryFont}"
                                       Foreground="#1E293B"
                                       Margin="0,0,0,20"/>
                            <UniformGrid Grid.Row="1" Columns="3">
                                <!-- Total Students Card -->
                                <Border Style="{StaticResource DashboardCardStyle}">
                                    <StackPanel>
                                        <StackPanel Orientation="Horizontal">
                                            <materialDesign:PackIcon Kind="AccountMultiple" Foreground="#4F46E5" Width="24" Height="24" VerticalAlignment="Center"/>
                                            <TextBlock Text="Total Students" FontSize="16" FontWeight="Medium" Foreground="#1E293B" Margin="10,0,0,0" VerticalAlignment="Center"/>
                                        </StackPanel>
                                        <TextBlock x:Name="TotalStudentsTextBlock" FontSize="32" FontWeight="Bold" Foreground="#1E293B" Margin="0,10,0,0"/>
                                        <TextBlock Text="Active students in the system" FontSize="12" Foreground="#64748B"/>
                                    </StackPanel>
                                </Border>
                                <!-- Total Enrollments Card -->
                                <Border Style="{StaticResource DashboardCardStyle}">
                                    <StackPanel>
                                        <StackPanel Orientation="Horizontal">
                                            <materialDesign:PackIcon Kind="ClipboardList"
                                                                     Foreground="#10B981"
                                                                     Width="24"
                                                                     Height="24"
                                                                     VerticalAlignment="Center"/>
                                            <TextBlock Text="Total Enrollments"
                                                       FontSize="16"
                                                       FontWeight="Medium"
                                                       FontFamily="{StaticResource PrimaryFont}"
                                                       Foreground="#1E293B"
                                                       Margin="10,0,0,0"
                                                       VerticalAlignment="Center"/>
                                        </StackPanel>
                                        <TextBlock Text="3,456"
                                                   FontSize="32"
                                                   FontWeight="Bold"
                                                   FontFamily="{StaticResource PrimaryFont}"
                                                   Foreground="#1E293B"
                                                   Margin="0,10,0,0"/>
                                        <TextBlock Text="Current course enrollments"
                                                   FontSize="12"
                                                   FontFamily="{StaticResource PrimaryFont}"
                                                   Foreground="#64748B"/>
                                    </StackPanel>
                                </Border>
                                <!-- Average Grade Card -->
                                <Border Style="{StaticResource DashboardCardStyle}">
                                    <StackPanel>
                                        <StackPanel Orientation="Horizontal">
                                            <materialDesign:PackIcon Kind="Star"
                                                                     Foreground="#F59E0B"
                                                                     Width="24"
                                                                     Height="24"
                                                                     VerticalAlignment="Center"/>
                                            <TextBlock Text="Average Grade"
                                                       FontSize="16"
                                                       FontWeight="Medium"
                                                       FontFamily="{StaticResource PrimaryFont}"
                                                       Foreground="#1E293B"
                                                       Margin="10,0,0,0"
                                                       VerticalAlignment="Center"/>
                                        </StackPanel>
                                        <TextBlock Text="8.5"
                                                   FontSize="32"
                                                   FontWeight="Bold"
                                                   FontFamily="{StaticResource PrimaryFont}"
                                                   Foreground="#1E293B"
                                                   Margin="0,10,0,0"/>
                                        <TextBlock Text="Average student performance"
                                                   FontSize="12"
                                                   FontFamily="{StaticResource PrimaryFont}"
                                                   Foreground="#64748B"/>
                                    </StackPanel>
                                </Border>
                                <!-- Active Courses Card -->
                                <Border Style="{StaticResource DashboardCardStyle}">
                                    <StackPanel>
                                        <StackPanel Orientation="Horizontal">
                                            <materialDesign:PackIcon Kind="BookOpen"
                                                                     Foreground="#EC4899"
                                                                     Width="24"
                                                                     Height="24"
                                                                     VerticalAlignment="Center"/>
                                            <TextBlock Text="Active Courses"
                                                       FontSize="16"
                                                       FontWeight="Medium"
                                                       FontFamily="{StaticResource PrimaryFont}"
                                                       Foreground="#1E293B"
                                                       Margin="10,0,0,0"
                                                       VerticalAlignment="Center"/>
                                        </StackPanel>
                                        <TextBlock Text="45"
                                                   FontSize="32"
                                                   FontWeight="Bold"
                                                   FontFamily="{StaticResource PrimaryFont}"
                                                   Foreground="#1E293B"
                                                   Margin="0,10,0,0"/>
                                        <TextBlock Text="Currently offered courses"
                                                   FontSize="12"
                                                   FontFamily="{StaticResource PrimaryFont}"
                                                   Foreground="#64748B"/>
                                    </StackPanel>
                                </Border>
                                <!-- New Students Card -->
                                <Border Style="{StaticResource DashboardCardStyle}">
                                    <StackPanel>
                                        <StackPanel Orientation="Horizontal">
                                            <materialDesign:PackIcon Kind="AccountPlus"
                                                                     Foreground="#3B82F6"
                                                                     Width="24"
                                                                     Height="24"
                                                                     VerticalAlignment="Center"/>
                                            <TextBlock Text="New Students"
                                                       FontSize="16"
                                                       FontWeight="Medium"
                                                       FontFamily="{StaticResource PrimaryFont}"
                                                       Foreground="#1E293B"
                                                       Margin="10,0,0,0"
                                                       VerticalAlignment="Center"/>
                                        </StackPanel>
                                        <TextBlock Text="78"
                                                   FontSize="32"
                                                   FontWeight="Bold"
                                                   FontFamily="{StaticResource PrimaryFont}"
                                                   Foreground="#1E293B"
                                                   Margin="0,10,0,0"/>
                                        <TextBlock Text="Students joined this month"
                                                   FontSize="12"
                                                   FontFamily="{StaticResource PrimaryFont}"
                                                   Foreground="#64748B"/>
                                    </StackPanel>
                                </Border>
                                <!-- Pending Requests Card -->
                                <Border Style="{StaticResource DashboardCardStyle}">
                                    <StackPanel>
                                        <StackPanel Orientation="Horizontal">
                                            <materialDesign:PackIcon Kind="ClockAlert"
                                                                     Foreground="#EF4444"
                                                                     Width="24"
                                                                     Height="24"
                                                                     VerticalAlignment="Center"/>
                                            <TextBlock Text="Pending Requests"
                                                       FontSize="16"
                                                       FontWeight="Medium"
                                                       FontFamily="{StaticResource PrimaryFont}"
                                                       Foreground="#1E293B"
                                                       Margin="10,0,0,0"
                                                       VerticalAlignment="Center"/>
                                        </StackPanel>
                                        <TextBlock x:Name="PendingRequestsTextBlock" 
                                                   FontSize="32"
                                                   FontWeight="Bold"
                                                   FontFamily="{StaticResource PrimaryFont}"
                                                   Foreground="#1E293B"
                                                   Margin="0,10,0,0"/>
                                        <TextBlock Text="Enrollment requests pending"
                                                   FontSize="12"
                                                   FontFamily="{StaticResource PrimaryFont}"
                                                   Foreground="#64748B"/>
                                    </StackPanel>
                                </Border>
                            </UniformGrid>
                        </Grid>
                    </ScrollViewer>
                </ContentControl>
            </Grid>
        </Border>
    </Grid>
</Window>