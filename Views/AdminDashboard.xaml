<Window x:Class="StudentManagementSystem.Views.AdminDashboard"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Admin Dashboard - Student Management System"
        Height="600"
        Width="800"
        WindowStyle="None"
        WindowState="Maximized"
        WindowStartupLocation="CenterScreen"
        Background="#F5F7FA">
    <Window.Resources>
        <!-- Sidebar Button Style -->
        <Style x:Key="SidebarButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#4A90E2"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="Margin" Value="10,5"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="5"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Left"
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#357ABD"/>
                                <Setter Property="Cursor" Value="Hand"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#2C6499"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Logout Button Style -->
        <Style x:Key="LogoutButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#E74C3C"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="Margin" Value="0,0,5,0"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="5"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center"
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#C0392B"/>
                                <Setter Property="Cursor" Value="Hand"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#A93226"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Exit Button Style -->
        <Style x:Key="ExitButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#C0392B"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="Margin" Value="5,0,0,0"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="5"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center"
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#A93226"/>
                                <Setter Property="Cursor" Value="Hand"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#922B21"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Sidebar -->
        <Border Background="#2C3E50"
                Margin="0,0,5,0"
                CornerRadius="0,8,8,0">
            <StackPanel>
                <!-- Sidebar Header -->
                <Border Background="#233140"
                        Padding="10"
                        Margin="0,0,0,10">
                    <StackPanel>
                        
                        <TextBlock x:Name="GreetingTextBlock"
                                   Text="Welcome Administrator"
                                   Foreground="White"
                                   FontSize="12"
                                   HorizontalAlignment="Center"
                                   Margin="0,5,0,0"/>
                    </StackPanel>
                </Border>

                <!-- Buttons -->
                <Button Content="Manage Students"
                        Style="{StaticResource SidebarButtonStyle}"
                        Click="ManageStudents_Click"/>
                <Button Content="Manage Users"
                        Style="{StaticResource SidebarButtonStyle}"
                        Click="ManageUsers_Click"/>
                <Button Content="Manage Roles"
                        Style="{StaticResource SidebarButtonStyle}"
                        Click="ManageRoles_Click"/>
                <Button Content="Manage User Roles"
                        Style="{StaticResource SidebarButtonStyle}"
                        Click="ManageUserRoles_Click"/>
                <Button Content="Manage Subjects"
                        Style="{StaticResource SidebarButtonStyle}"
                        Click="ManageSubjects_Click"/>
                <Button Content="Manage Provinces"
                        Style="{StaticResource SidebarButtonStyle}"
                        Click="ManageProvinces_Click"/>
                <Button Content="View Enrollments"
                        Style="{StaticResource SidebarButtonStyle}"
                        Click="ViewEnrollments_Click"/>
                <Button Content="Search Student Grades"
                        Style="{StaticResource SidebarButtonStyle}"
                        Click="SearchGrades_Click"/>

                <!-- Logout and Exit Buttons -->
                <StackPanel Orientation="Horizontal"
                            Margin="10,20,10,5">
                    <Button Content="Logout"
                            Width="80"
                            Style="{StaticResource LogoutButtonStyle}"
                            Click="Logout_Click"/>
                    <Button Content="Exit"
                            Width="80"
                            Style="{StaticResource ExitButtonStyle}"
                            Click="Exit_Click"/>
                </StackPanel>
            </StackPanel>
        </Border>

        <!-- Main Content -->
        <Border Grid.Column="1"
                Background="White"
                CornerRadius="8"
                Margin="5,10,10,10"
                BorderBrush="#E0E0E0"
                BorderThickness="1">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Header with Date and Time -->
                <Grid Grid.Row="0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <StackPanel Grid.Row="1"
                                Orientation="Horizontal"
                                HorizontalAlignment="Right"
                                Margin="10,0,10,10">
                        <TextBlock x:Name="DateTextBlock"
                                   FontSize="14"
                                   Foreground="#2C3E50"
                                   Margin="0,0,15,0"/>
                        <TextBlock x:Name="TimeTextBlock"
                                   FontSize="14"
                                   Foreground="#2C3E50"/>
                    </StackPanel>
                </Grid>

                <!-- Content Area -->
                <ContentControl x:Name="MainContent"
                                Grid.Row="1"
                                Margin="10"/>
            </Grid>
        </Border>
    </Grid>
</Window>