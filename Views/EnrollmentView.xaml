<UserControl x:Class="StudentManagementSystem.Views.EnrollmentView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <TextBlock Text="All Enrollments" FontSize="16" Margin="0,0,0,10"/>
        <DataGrid x:Name="EnrollmentsGrid" Grid.Row="1" AutoGenerateColumns="False" IsReadOnly="True">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Student ID" Binding="{Binding IdStudent}" Width="150"/>
                <DataGridTextColumn Header="Subject ID" Binding="{Binding IdSubject}" Width="150"/>
                <DataGridTextColumn Header="Subject Name" Binding="{Binding Name}" Width="200"/>
                <DataGridTextColumn Header="Mark" Binding="{Binding Mark}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>