<Window x:Class="StudentManagementSystem.Views.UserDashboard"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="User Dashboard" 
        Height="600" 
        Width="800" 
        WindowStyle="None"
        WindowState="Maximized"
        WindowStartupLocation="CenterScreen"
        Background="#F8FAFC">

    <Window.Resources>
        <!-- Color Resources -->
        <SolidColorBrush x:Key="PrimaryBrush" Color="#4F46E5"/>
        <SolidColorBrush x:Key="PrimaryDarkBrush" Color="#4338CA"/>
        <SolidColorBrush x:Key="SidebarBrush" Color="#1E293B"/>
        <SolidColorBrush x:Key="SidebarHeaderBrush" Color="#0F172A"/>
        <SolidColorBrush x:Key="DangerBrush" Color="#EF4444"/>
        <SolidColorBrush x:Key="DangerDarkBrush" Color="#DC2626"/>
        <SolidColorBrush x:Key="LightTextBrush" Color="#F8FAFC"/>
        <SolidColorBrush x:Key="DarkTextBrush" Color="#1E293B"/>

        <!-- Sidebar Button Style -->
        <Style x:Key="SidebarButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{StaticResource LightTextBrush}"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="Margin" Value="10,5"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" 
                                Background="{TemplateBinding Background}"
                                CornerRadius="6"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#334155"/>
                                <Setter Property="Cursor" Value="Hand"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#475569"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Action Button Style -->
        <Style x:Key="ActionButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource PrimaryBrush}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" 
                                Background="{TemplateBinding Background}"
                                CornerRadius="6"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center"
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="{StaticResource PrimaryDarkBrush}"/>
                                <Setter Property="Cursor" Value="Hand"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#3730A3"/>
                                <Setter Property="RenderTransform">
                                    <Setter.Value>
                                        <ScaleTransform ScaleX="0.98" ScaleY="0.98"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Danger Button Style -->
        <Style x:Key="DangerButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource DangerBrush}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" 
                                Background="{TemplateBinding Background}"
                                CornerRadius="6"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center"
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="{StaticResource DangerDarkBrush}"/>
                                <Setter Property="Cursor" Value="Hand"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#B91C1C"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="220"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Sidebar - Modern Design -->
        <Border Background="{StaticResource SidebarBrush}">
            <StackPanel>
                <!-- Greeting Section -->
                <Border Background="{StaticResource SidebarHeaderBrush}"
                        Padding="15"
                        Margin="0,0,0,10">
                    <TextBlock x:Name="GreetingTextBlock"
                               Foreground="{StaticResource LightTextBrush}"
                               FontSize="14"
                               FontWeight="SemiBold"
                               HorizontalAlignment="Center"
                               TextWrapping="Wrap"/>
                </Border>

                <!-- Navigation Buttons with StackPanel Content -->
                <Button Style="{StaticResource SidebarButtonStyle}"
                        Click="EnrollSubject_Click">
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="BookPlus" 
                                               Width="20"
                                               Height="20"
                                               Margin="0,0,12,0"
                                               VerticalAlignment="Center"/>
                        <TextBlock Text="Enroll Subject"/>
                    </StackPanel>
                </Button>

                <Button Style="{StaticResource SidebarButtonStyle}"
                        Click="ViewEnrolledSubjects_Click">
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="BookOpen" 
                                               Width="20"
                                               Height="20"
                                               Margin="0,0,12,0"
                                               VerticalAlignment="Center"/>
                        <TextBlock Text="View Enrolled Subjects"/>
                    </StackPanel>
                </Button>

                <Button Style="{StaticResource SidebarButtonStyle}"
                        Click="UpdateAccount_Click">
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="AccountEdit" 
                                               Width="20"
                                               Height="20"
                                               Margin="0,0,12,0"
                                               VerticalAlignment="Center"/>
                        <TextBlock Text="Update Account"/>
                    </StackPanel>
                </Button>

                <Button Style="{StaticResource SidebarButtonStyle}"
                        Click="ViewEnrollRequests_Click">
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="ClipboardList" 
                               Width="20"
                               Height="20"
                               Margin="0,0,12,0"
                               VerticalAlignment="Center"/>
                        <TextBlock Text="View My Requests"/>
                    </StackPanel>
                </Button>

                <!-- Action Buttons -->
                <StackPanel Orientation="Horizontal"
                            Margin="10,20,10,5"
                            HorizontalAlignment="Center">
                    <Button Style="{StaticResource ActionButtonStyle}"
                            Width="90"
                            Click="Logout_Click"
                            Margin="0,0,20,0">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="Logout"
                             Width="16"
                             Height="16"
                             Margin="0,0,6,0"
                             VerticalAlignment="Center"/>
                            <TextBlock Text="Logout"/>
                        </StackPanel>
                    </Button>
                    <Button Style="{StaticResource DangerButtonStyle}"
                            Width="70"
                            Click="Exit_Click">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="Power"
                             Width="16"
                             Height="16"
                             Margin="0,0,6,0"
                             VerticalAlignment="Center"/>
                            <TextBlock Text="Exit"/>
                        </StackPanel>
                    </Button>
                </StackPanel>
            </StackPanel>
        </Border>

        <!-- Main Content Area - Modern Card Design -->
        <Border Grid.Column="1"
                Background="White"
                Margin="15"
                BorderBrush="#E2E8F0"
                BorderThickness="1">
            <Border.Effect>
                <DropShadowEffect BlurRadius="15" 
                                  ShadowDepth="0" 
                                  Color="#64748B" 
                                  Opacity="0.1"/>
            </Border.Effect>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Header with Date and Time -->
                <Border Grid.Row="0"
                        Padding="15"
                        Background="White"
                        BorderBrush="#E2E8F0"
                        BorderThickness="0,0,0,1">
                    <StackPanel Orientation="Horizontal"
                                HorizontalAlignment="Right">
                        <TextBlock x:Name="DateTextBlock"
                                   FontSize="14"
                                   Foreground="#64748B"/>
                        <TextBlock Text=" • "
                                   FontSize="14"
                                   Foreground="#E2E8F0"
                                   Margin="5,0"/>
                        <TextBlock x:Name="TimeTextBlock"
                                   FontSize="14"
                                   Foreground="#64748B"/>
                    </StackPanel>
                </Border>

                <!-- Content Area -->
                <ContentControl x:Name="MainContent" 
                                Grid.Row="1"
                                Margin="15"/>
            </Grid>
        </Border>
    </Grid>
</Window>