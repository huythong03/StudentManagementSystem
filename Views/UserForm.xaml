<Window x:Class="StudentManagementSystem.Views.UserForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="User Form" Height="540" Width="400" WindowStartupLocation="CenterOwner">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" Margin="0,0,0,10">
            <TextBlock Text="Student ID:"/>
            <ComboBox x:Name="cbStudentId" Width="200" DisplayMemberPath="Id" SelectedValuePath="Id" IsEnabled="{Binding IsNew}"/>
        </StackPanel>
        <StackPanel Grid.Row="1" Margin="0,0,0,10">
            <TextBlock Text="Username:"/>
            <TextBox x:Name="txtUsername" Width="200"/>
        </StackPanel>
        <StackPanel Grid.Row="2" Margin="0,0,0,10">
        <TextBlock Text="Password:"/>
        <TextBox x:Name="txtPassword" Width="200"/>
        </StackPanel>
        <StackPanel Grid.Row="3" Margin="0,0,0,10">
            <TextBlock Text="Note:"/>
            <TextBox x:Name="txtNote" Width="200" Height="50" AcceptsReturn="True"/>
        </StackPanel>
        <StackPanel Grid.Row="4" Margin="0,0,0,10">
            <TextBlock Text="Status:"/>
            <CheckBox x:Name="chkStatus" Content="Active" IsChecked="True"/>
        </StackPanel>
        <StackPanel Grid.Row="5" Margin="0,0,0,10">
            <TextBlock Text="Created At:"/>
            <DatePicker x:Name="dpCreatedAt" Width="200" IsEnabled="False"/>
        </StackPanel>
        <StackPanel Grid.Row="6" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Save" Width="80" Margin="5" Click="Save_Click"/>
            <Button Content="Cancel" Width="80" Margin="5" Click="Cancel_Click"/>
        </StackPanel>
    </Grid>
</Window>